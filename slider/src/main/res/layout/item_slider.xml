<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/sliderContainer"
        android:layout_width="400dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewRight1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/frameLayoutCenterVertical"
            android:layout_toRightOf="@+id/frameLayoutCenterVertical"
            android:background="@android:color/transparent"
            android:src="@android:color/transparent" />

        <ImageView
            android:id="@+id/imageViewLeft1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignEnd="@+id/imageViewLeft2"
            android:layout_alignRight="@+id/imageViewLeft2"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@android:color/transparent" />

        <ImageView
            android:id="@+id/imageViewCenter"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_dialog_alert"
            android:focusable="true" />

        <ImageView
            android:id="@+id/imageViewRight2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/frameLayoutCenterVertical"
            android:layout_toRightOf="@+id/frameLayoutCenterVertical"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_dialog_alert" />

        <ImageView
            android:id="@+id/imageViewLeft2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/frameLayoutCenterVertical"
            android:layout_toStartOf="@+id/frameLayoutCenterVertical"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_dialog_alert" />

        <ImageView
            android:id="@+id/imageViewCenter2"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_dialog_alert" />

        <FrameLayout
            android:id="@+id/frameLayoutCenterVertical"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/imageButtonLeft"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignLeft="@+id/imageViewLeft1"
            android:layout_alignStart="@+id/imageViewLeft1"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:layout_marginLeft="8dp"
            android:src="@android:drawable/ic_media_rew"
            android:contentDescription="Slide to Left button"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/imageButtonRight"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignRight="@+id/imageViewRight1"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_media_ff"
            android:layout_marginEnd="8dp"
            android:layout_alignEnd="@+id/imageViewRight1"
            android:contentDescription="Slide to Right button" />
    </RelativeLayout>


</LinearLayout>
